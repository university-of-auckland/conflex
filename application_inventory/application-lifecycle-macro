## Macro title: Application Lifecycle Macro
## Macro has a body: Y
## Body processing: No macro body
## Output: Selected output option
##
## Developed by: Daniel Jimenez
## Date created: 09/02/2018
## Installed by: Daniel Jimenez

## This is an example macro
## @param Lifecycle:title=Application Lifecycle Phase|type=enum|enumValues=DEVELOPMENT,INTRODUCTION,GROWTH,MATURITY,DECLINE,DECOMMISSIONED|require
#set($lifecycle = $paramLifecycle)

## Check for valid lifecycle, otherwise set to INTRODUCTION
#if (!$lifecycle)
  #set($lifecycle = "INTRODUCTION")
#end

#if($lifecycle == "DEVELOPMENT")
  #set($colour = "Blue")
#elseif($lifecycle == "INTRODUCTION")
  #set($colour = "Blue")
#elseif($lifecycle == "GROWTH")
  #set($colour = "Green")
#elseif($lifecycle == "MATURITY")
  #set($colour = "Green")
#elseif($lifecycle == "DECLINE")
  #set($colour = "Red")
#elseif($lifecycle == "DECOMMISSIONED")
  #set($colour = "Red")
#end

<ac:structured-macro ac:macro-id="59b55b6b-0cac-45c5-908b-986a74e62932" ac:name="status" ac:schema-version="1">
  <ac:parameter ac:name="subtle">true</ac:parameter>
  <ac:parameter ac:name="colour">$colour</ac:parameter>
  <ac:parameter ac:name="title">$lifecycle</ac:parameter>
</ac:structured-macro>
